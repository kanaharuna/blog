<h1>Blog</h1>
<h3><%= @post_blog.title %></h3>
<p><%= @post_blog.created_at.strftime('%Y/%m/%d') %></p>
<%= attachment_image_tag @post_blog, :image,:fill,500,500,format:'jpeg' %>
<p><%= @post_blog.body %></p>
<% if @post_blog.user == current_user %>
  <%= link_to "Edit",edit_post_blog_path(@post_blog.id) %>
  <%= link_to "Destroy",post_blog_path(@post_blog),method: :delete %>
<% end %>