<h2>Editing Blog</h2>
<%= form_with model:@post_blog,local: true do |f| %>
  <label for="title">Title</label>
  <%= f.text_field :title, id:"title" %>
  <label for="image">Image</label>
  <%= f.attachment_field :image, id:"image" %>
  <label for="text">Text</label>
  <%= f.text_field :body, id:"text" %>
  <%= f.submit 'Edit Blog' %>
<% end %>

<%= link_to 'Show',post_blog_path(@post_blog.id) %> |
<%= link_to 'Back',post_blogs_path %>